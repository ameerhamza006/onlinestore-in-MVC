@model List<onlinestore.Models.vacanci>
@{
    ViewBag.Title = "vacandetail";
    Layout = "~/Views/shared/backtheme.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="text-uppercase bg-dark col-md-12 text-center text-white"><br /> Vacancies Details<br />   <br /> </h4>
    </div>
</div>
<br />
<h4 class="text-center text-success"> @TempData["deletvacan"] </h4>

<div class="main-content-inner">
    <div class="row">
        <!-- table dark start -->
        <div class="col-lg-12 mt-5">
            <div class="card">
                <div class="card-body">
                    <table class="table text-center">
                        <tbody class="text-uppercase bg-dark">
                            @using (Html.BeginForm("vacandetail", "Vacancies"))
                            {
                                <tr>
                                    <td><a href="@Url.Action("vacandetail","Vacancies")" class="btn btn-outline-warning"> See All</a> </td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <input type="date" name="date" value="@ViewBag.date" class="form-control" />
                                    </td>
                                    <td>
                                        <input type="submit" value="Search" class="btn btn-secondary" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="single-table">
                        <div class="table-responsive">
                            <table class="table text-center">
                                <thead class="text-uppercase bg-dark">
                                    <tr class="text-white">
                                        <th scope="col">ID</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Discription</th>
                                        <th scope="col">Last Date</th>
                                        <th scope="col">Image</th>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <th scope="col"> Delete </th>
                                            <th scope="col"> Edit</th>
                                        }
                                        </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                    <tr>

                                        <th scope="row">@item.v_id</th>
                                        <td>@item.v_name </td>
                                        <td>@item.v_discrip </td>
                                        <td>@item.v_last_date  </td>
                                        <td> <img src="~/vacancieimage/@Url.Content( item.v_img)" width="250px" height="250px" /> </td>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <td>
                                                <a href="@Url.Action("vacandelete", "Vacancies", new { id = item.v_id })" class="badge badge-danger"> Delete  </a>

                                            </td>

                                            <td>
                                                <a href="@Url.Action("vacanedit", "Vacancies", new { id = item.v_id })" class="badge badge-success">   Edit  </a>
                                            </td>
                                        }

                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- table dark end -->
    </div>
</div>


