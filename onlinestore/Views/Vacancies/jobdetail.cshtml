@model List<onlinestore.Models.job>
@{
    ViewBag.Title = "jobdetail";
    Layout = "~/Views/shared/backtheme.cshtml";
}


<div class="card">
    <div class="card-body">
        <a href="@Url.Action("jobdetail","Vacancies")"><h4 class="btn btn-info col-md-12"> Who Apply <br /> For jobs<br /> <i class="fa fa-arrow-circle-down">  </i> </h4></a>
    </div>
</div>
<br />
<h4 class="text-center text-success"> @TempData["deletj"] </h4>




<div class="main-content-inner">
    <div class="row">
        <!-- table info start -->
        <div class="col-lg-12 mt-5">
            <div class="card">
                <div class="card-body">
                   
                    <div class="single-table">
                        <div class="table-responsive">
                            <table class="table text-center">
                                <thead class="text-uppercase bg-info">
                                    <tr class="text-white">
                                        <th scope="col">ID</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Number</th>
                                        <th scope="col">City</th>
                                        <th scope="col">Address</th>
                                        <th scope="col">Expereince</th>
                                        <th scope="col">Qualification</th>
                                        <th scope="col">Age</th>
                                        <th scope="col">Gander</th>
                                        <th scope="col">Job Name</th>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <th scope="col">Delete  </th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <th scope="row">@item.j_id</th>
                                        <td>@item.j_fullname</td>
                                        <td>@item.j_email</td>
                                        <td>@item.j_number</td>
                                        <td>@item.j_city </td>
                                        <td>@item.j_address</td>
                                        <td>@item.j_experince </td>
                                        <td>@item.j_qualification</td>
                                        <td>@item.j_age </td>
                                        <td>@item.j_gander </td>
                                        <td>@item.vacanci.v_name </td>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <td>

                                                <a href="@Url.Action("jobdelete", "Vacancies", new { id = item.j_id })" class="badge badge-danger"> Delete </a>

                                            </td>
                                        }
                                    </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- table info end -->
    </div>
</div>

