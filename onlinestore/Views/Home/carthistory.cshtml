    <!-- End Banner Area -->
    <!--================Cart Area =================-->
    <section class="cart_area">
        <div class="container">
            <div class="cart_inner">
                <div class="table-responsive">
                    @if (Session["name"] != null)
                    {
                       
                            <table class="table">


                                <thead>
                                    <tr>
                                        <th scope="col">Product </th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Total</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @{
                                        int amount = 0;
                                        int total = 0;


                                        foreach (var item in ViewBag.cc)
                                        {

                                            var p = new onlinestore.Models.shoppingEntities().products.ToList();
                                            var l = new onlinestore.Models.shoppingEntities().logins.ToList();



                                            foreach (var pro in p)
                                            {
                                            
                                                if (item.cart_fk_pro == pro.pro_id)
                                                {
                                                   

                                                            amount = item.cart_qty * pro.pro_price;

                                                    <tr>

                                                        <td>
                                                            <div class="media">
                                                                <div class="d-flex">
                                                                    <img src="~/productimg/@Url.Content(pro.pro_img)" style="width:200px; height:200px;"  alt="">
                                                                </div>
                                                                <div class="media-body">
                                                                    <p> @pro.pro_title </p>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <h5> Rs.@pro.pro_price </h5>
                                                        </td>
                                                        <td>
                                                            <div class="product_count">
                                                                <input type="text" name="qty" id="sst" maxlength="12" value="@item.cart_qty" title="Quantity:"
                                                                       class="input-text qty">
                                                               
                                                               
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <h5>Rs.@amount</h5>
                                                        </td>


                                                    </tr>
                                                        
                                                    
                                                }

                                            }

                                            total += amount;
                                        }

                                        <tr class="bottom_button">
                                            <td>

                                                <a class="primary-btn" href="@Url.Action("home","Home")">Update Cart</a>
                                            </td>
                                            <td>
                                            </td>
                                            <td>
                                            </td>
                                            <td>
                                                @total
                                            </td>
                                        </tr>



                                    }

                                </tbody>



                            </table>
                      
                    }
                    else
                    {
                        <h2 class="text-center"> Your Cart Is Empty </h2>

                        <h5 class="text-center"><a class="text-danger" href="@Url.Action("login", "Home")"> Please Click Here To Login!</a> </h5>
                    }



                </div>
            </div>
        </div>
    </section>
