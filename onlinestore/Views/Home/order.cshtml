                    <div class="row">
                        <div class="col-lg-8">
                            <h3>Billing Details</h3>


                            <div class="col-md-12 form-group p_star">

                                @Html.TextBoxFor(a => a.bill_firstname, new { @class = "form-control", @placeholder = "First Name" })

                            </div>
                            <div class="col-md-12 form-group p_star">
                                @Html.TextBoxFor(a => a.bill_lastname, new { @class = "form-control", @placeholder = "Last Name" })
                            </div>

                            <div class="col-md-12 form-group p_star">
                                @Html.TextBoxFor(a => a.bill_country, new { @class = "form-control", @placeholder = "Country" })
                            </div>

                            <div class="col-md-12 form-group p_star">
                                @Html.TextBoxFor(a => a.bill_number, new { @class = "form-control", @placeholder = "Number" })
                            </div>
                            <div class="col-md-12 form-group p_star">
                                @Html.TextBoxFor(a => a.bill_email, new { @class = "form-control", @placeholder = "Email" })


                            </div>

                            <div class="col-md-12 form-group p_star">
                                @Html.TextBoxFor(a => a.bill_address, new { @class = "form-control", @placeholder = "Address" })
                            </div>

                            <div class="col-md-12 form-group form-group p_star">
                                @Html.DropDownListFor(a => a.bill_city, new List<SelectListItem>
                           {
                               new SelectListItem { Text = "Select City", Selected = true  },
                               new SelectListItem { Text = "Karachi" },
                               new SelectListItem { Text = "Lahore" },
                               new SelectListItem { Text = "Islamabad" }

                           }, new { @class = "form-control country_select" })

                            </div>

                            <div class="col-md-12 form-group p_star">
                                @Html.TextBoxFor(a => a.bill_street, new { @class = "form-control", @placeholder = "Street" })
                            </div>

                            <div class="col-md-12 form-group p_star">
                                <input type="hidden" name="bill_date" value="@DateTime.Now" />
                            </div>

                            <div class="col-md-12 form-group">
                                @Html.TextBoxFor(a => a.bill_postcode, new { @class = "form-control", @placeholder = "Postcode/zip" })
                            </div>

                            @*<div class="col-md-12 form-group">
                                @Html.TextBoxFor(a => a.bil_payment, new { @class = "form-control", @placeholder = "Payment" })
                            </div>*@

                        </div>

                        <div class="col-lg-4">
                            <div class="order_box">

                                <h2>Your Order</h2>
                                <ul class="list">


                                    <li><a href="#">Product <span>Total</span></a></li>

                                    @{

                                        int total = 0;

                                        foreach (var ad in ViewBag.d)
                                        {


                                            var e = new onlinestore.Models.shoppingEntities().products.ToList();



                                            foreach (var h in e)
                                            {
                                                if (ad.c_id == h.pro_id)
                                                {

                                                    total = ad.c_qty * h.pro_price;

                                                    <li><a href="#">@h.category2.cat2_name <span class="middle">x @ad.c_qty </span> <span class="last">@total</span></a></li>
                                                }
                                            }
                                        }
                                    }
                                </ul>
                                <ul class="list list_2">
                                   
                                    <li><a href="#">Total <span>@ViewBag.a</span></a></li>
                                </ul>
                                <div class="payment_item">
                                    <div >
                                      
                                       @Html.RadioButton("bill_payment", "Check payment")
                                        <label for="f-option5">Check payments</label>
                                        <div class="check">  </div>
                                    </div>
                                    <p>
                                        Please send a check to Store Name, Store Street, Store Town, Store State / County,
                                        Store Postcode.
                                    </p>
                                </div>
                                <div class="payment_item active">
                                    <div>
                                        @Html.RadioButton("bill_payment", "Paypal")
                                        <label for="f-option6">Paypal </label>
                                        <img src="~/Frontent/img/product/card.jpg" alt="">
                                        <div class="check">  </div>
                                    </div>
                                    <p>
                                        Pay via PayPal; you can pay with your credit card if you don’t have a PayPal
                                        account.
                                    </p>
                                </div>
                                <div class="creat_account">
                                    <input type="checkbox" id="f-option4" name="selector">
                                    <label for="f-option4">I’ve read and accept the </label>
                                    <a href="#">terms & conditions*</a>
                                </div>
                                <input type="hidden" name="bill_fk_login" value="@Session["id"]" />
                                <input type="submit" value="Order Your Products" class="primary-btn" />


                            </div>
                        </div>

                    </div>


                                        }
            </div>



