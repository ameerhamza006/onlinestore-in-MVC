    <!--================Order Details Area =================-->
    <section class="order_details section_gap">
        <div class="container">

            @{

                int amount = 0;
                int total = 0;


                foreach (var item in ViewBag.c)
                {

                    var p = new onlinestore.Models.shoppingEntities().products.ToList();
                        var b = new onlinestore.Models.shoppingEntities().billings.ToList();

                    <h3 class="title_confirmation">Thank you. Your order has been received.</h3>
                    <div class="row order_d_inner">





                        

                        @foreach (var bil in b)
                        {




                        <div class="col-lg-4">
                            <div class="details_item">
                                <h4>Order Info</h4>

                                <ul class="list">
                                    <li><a href="#"><span>Order number</span> : @bil.bil_ordernumber</a></li>
                                    <li><a href="#"><span>Date</span> : @DateTime.Now</a></li>
                                    <li><a href="#"><span>Total</span> : @total</a></li>
                                    <li><a href="#"><span>Payment method</span> : @bil.bil_payment </a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="details_item">
                                <h4>Billing Address</h4>
                                <ul class="list">
                                    <li><a href="#"><span>Street</span> : @bil.bil_street</a></li>
                                    <li><a href="#"><span>City</span> : @bil.bil_city</a></li>
                                    <li><a href="#"><span>Country</span> : @bil.bil_country</a></li>
                                    <li><a href="#"><span>Postcode </span> : @bil.bil_postcode</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="details_item">
                                <h4>Shipping Address</h4>
                                <ul class="list">
                                    <li><a href="#"><span>Name</span> : @Session["name"]</a></li>
                                    <li><a href="#"><span>Email</span> : @Session["name"]</a></li>
                                    <li><a href="#"><span>Number</span> : @bil.bil_number</a></li>
                                    <li><a href="#"><span>Address </span> : @bil.bill_address</a></li>
                                </ul>
                            </div>

                        </div>

                        }



                    </div>

                    <div class="order_details_table">
                        <h2>Order Details</h2>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Product</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pro in p)
                                    {

                                        if (item.c_id == pro.pro_id)
                                        {
                                            amount = item.c_qty * pro.pro_price;
                                            total += amount;
                                            <tr>
                                                <td>
                                                    <p>@pro.pro_title</p>
                                                </td>
                                                <td>
                                                    <h5>x @item.c_qty</h5>
                                                </td>
                                                <td>
                                                    <p>Rs.@amount</p>
                                                </td>
                                            </tr>




                                            <tr>
                                                <td>
                                                    <h4>Total</h4>
                                                </td>
                                                <td>
                                                    <h5></h5>
                                                </td>
                                                <td>
                                                    <p>Rs.@total</p>
                                                </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            }
        </div>
    </section>
