@model List<onlinestore.Models.login>
@{
    ViewBag.Title = "empdetail";
    Layout = "~/Views/shared/backtheme.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="text-uppercase bg-dark col-md-12 text-center text-white"><br /> Employee Details<br />   <br /> </h4>
    </div>
</div>
<br />
<h4 class="text-center text-success"> @TempData["empdelet"] </h4>

<div class="main-content-inner">
    <div class="row">
        <!-- table dark start -->
        <div class="col-lg-12 mt-5">
            <div class="card">
                <div class="card-body">
                    <table class="table text-center">
                        <tbody class="text-uppercase bg-dark">
                            @using (Html.BeginForm("empdetail", "Employee"))
                            {
                                <tr>
                                    <td><a href="@Url.Action("empdetail","Employee")" class="btn btn-outline-warning"> See All</a> </td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <input type="search" name="name" value="@ViewBag.name" placeholder="Search Name" class="form-control" />
                                    </td>
                                    <td>
                                        <input type="submit" value="Search" class="btn btn-secondary" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="single-table">
                        <div class="table-responsive">
                            <table class="table text-center">
                                <thead class="text-uppercase bg-dark">
                                    <tr class="text-white">

                                        <th scope="col">image</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Number</th>

                                        <th scope="col">Role</th>

                                        @if (User.IsInRole("Admin"))
                                        {
                                            <th scope="col">Password</th>
                                        }
                                            <th scope="col">

                                                Action

                                            </th>

                                        </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                    <tr>
                                        @if (item.log_role != "User")
                                        {

                                        <td> <a href="@Url.Action("empsingle", "Employee", new { id = item.log_id })"> <img src="~/empimages/@Url.Content(item.emp_img)" class="rounded-circle" width="50px" height="50px" /> </a> </td>
                                        <td>@item.log_name</td>
                                        <td>@item.log_email</td>
                                        <td>@item.log_number</td>

                                        <td> @item.log_role </td>

                                         if (User.IsInRole("Admin"))
                                         {

                                        <td>@item.log_password </td>
                                         }
                                    <td>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a href="@Url.Action("empdelete", "Employee", new { id = item.log_id })" class="badge badge-danger"> Delete |</a>


                                            <a href="@Url.Action("empedit", "Employee", new { id = item.log_id })" class="badge badge-success">   Edit  |</a>
                                        }
                                            <a href="@Url.Action("empsingle", "Employee", new { id = item.log_id })" class="badge badge-primary">   Details  </a>
                                        </td>
                                        }
                                    </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- table dark end -->
    </div>
</div>

