@model onlinestore.Models.login
@{
    ViewBag.Title = "empedit";
    Layout = "~/Views/shared/backtheme.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="btn btn-primary col-md-12"> Employee <br /> Edit Here<br /> <i class="fa fa-arrow-circle-down">  </i> </h4>
    </div>
</div>
<div class="col-12 mt-5">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("empedit", "Employee", FormMethod.Post))
            {
               

            <div class="form-horizontal">



                <div class="row offset-2">
                    <div class="col-md-4">
                        <div>
                            <img class="offset-10" src="~/empimages/@Url.Content(Model.emp_img)" width="100px" height="100px" />

                        </div>
                    </div>
                    <div class="col-md-7">
                        <div>

                            <a href="@Url.Action("empdetail","Employee")" class="btn btn-rounded btn-info mb-3 offset-11"> View Employees </a>
                        </div>
                    </div>
                </div>


                <div class="form-group offset-2">

                    <label class="control-label col-md-2 "> Full Name  </label>
                    <div class="col-md-8 ">
                        @Html.TextBoxFor(e => e.job.j_fullname, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row offset-2">
                    <div class="col-md-4">
                        <div>
                            <label class="control-label"> login Name </label>
                            @Html.TextBoxFor(e => e.log_name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div>
                            <label class="control-label"> login Number </label>
                            @Html.TextBoxFor(e => e.log_email, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="row offset-2">
                    <div class="col-md-4">
                        <div>
                            <label class="control-label"> login Email </label>
                            @Html.TextBoxFor(e => e.log_number, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div>
                            <label class="control-label"> login City </label>
                            @Html.TextBoxFor(e => e.log_city, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="form-group offset-2">

                    <label class="control-label col-md-2 "> Login Address </label>
                    <div class="col-md-8 ">
                        @Html.TextBoxFor(e => e.log_address, new { @class = "form-control" })
                    </div>
                </div>

               
                <div class="row offset-2">
                    <div class="col-md-4">
                        <div>
                            <label class="control-label"> Email </label>
                            @Html.TextBoxFor(e => e.job.j_email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div>
                            <label class="control-label"> Number </label>
                            @Html.TextBoxFor(e => e.job.j_number, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <label class="control-label col-md-2">  </label>
                <div class="row offset-2">
                    <div class="col-md-4">
                        <div>
                            <label class="control-label"> City </label>
                            @Html.TextBoxFor(e => e.job.j_city, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div>
                            <label class="control-label"> Country </label>
                            @Html.TextBoxFor(e => e.job.j_country, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <label class="control-label col-md-2">  </label>
                <div class="form-group offset-2">
                    <label class="control-label col-md-2"> Address </label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(e => e.job.j_address, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row offset-2">
                    <div class="col-md-4">
                        <div>
                            <label class="control-label"> Qualification </label>
                            @Html.TextBoxFor(e => e.job.j_qualification, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div>
                            <label class="control-label"> Experince </label>
                            @Html.TextBoxFor(e => e.job.j_experince, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <label class="control-label col-md-2">  </label>
                <div class="row offset-2">
                    <div class="col-md-4">
                        <div>
                            <label class="control-label"> Gander </label>
                            @Html.TextBoxFor(e => e.job.j_gander, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div>
                            <label class="control-label"> Age </label>
                            @Html.TextBoxFor(e => e.job.j_age, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <label class="control-label col-md-2">  </label>
                <div class="row offset-2">
                    <div class="col-md-4">
                        <div>
                            <label class="control-label"> Clients </label>
                            @Html.TextBoxFor(e => e.emp_client, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div>
                            <label class="control-label"> Role </label>
                            @Html.TextBoxFor(e => e.log_role, new { @class = "form-control" })
                        </div>
                    </div>
                </div>


                <label class="control-label col-md-2">  </label>
                <div class="row offset-2">
                    <div class="col-md-4">
                        <div>
                            <label class="control-label"> Password </label>
                            @Html.TextBoxFor(e => e.log_password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4" style="margin-top:1px;">
                        <label class="control-label"> Status </label>
                        <div class="form-control">

                            @Html.EditorFor(e => e.log_status, new { @class = "form-control" })
                        </div>
                    </div>
                </div>


                <label class="control-label col-md-2"> </label>




                <div class="form-group">
                    <div class="offset-4 col-md-3">
                        <button type="submit" class="btn btn-dark btn-lg btn-block"> Edit </button>

                    </div>
                </div>
            </div>

                                }


                            </div>
    </div>
</div>

