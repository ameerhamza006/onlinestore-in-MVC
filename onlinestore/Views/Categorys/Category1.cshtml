@model onlinestore.Models.category1
@{
    ViewBag.Title = "Category1";
    Layout = "~/Views/shared/backtheme.cshtml";
}


<div class="card">
    <div class="card-body">
        <h1 class="btn btn-primary col-md-12"> First Category <br /> Add Here<br /> <i class="fa fa-arrow-circle-down">  </i> </h1>
    </div>
</div>
<div class="col-8 mt-5">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("Category1","Categorys",FormMethod.Post))
            {
               

                <div class="form-horizontal">

                   
                    <div class="form-group">
                        <a href="@Url.Action("cat1list","Categorys")" class="btn btn-rounded btn-info mb-3 offset-10"> View Categorys </a>
                        <label class="control-label col-md-2"> Category </label>

                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.cat1_name, new { @class = "form-control" } )
                           
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Add Category" class="btn btn-dark" />
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>
