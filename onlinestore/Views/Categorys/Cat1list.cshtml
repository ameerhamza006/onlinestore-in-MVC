@model List<onlinestore.Models.category1>
@{
    ViewBag.Title = "Cat1list";
    Layout = "~/Views/shared/backtheme.cshtml";
}


<div class="card">
    <div class="card-body">

        <h4 class="text-uppercase bg-dark col-md-12 text-center text-white"><br />  Category first <br />   <br /> </h4>
    </div>
</div>
<br />
<h4 class="text-center text-success"> @TempData["deletcat1"] </h4>

<div class="main-content-inner">
    <div class="row">
        <!-- table dark start -->
        <div class="col-lg-12 mt-5">
            <div class="card">
                <div class="card-body">
                    <table class="table text-white">
                        <tbody class="text-uppercase bg-dark">
                            <tr>
                               
                                
                                <td style="margin-top:10px; margin-bottom:10px; margin-left:10px;">  @if (User.IsInRole("Admin")){<a href="@Url.Action("Category1", "Categorys")" class="text-white btn btn-danger"> Add New </a>} </td>
                                <td class="btn btn-secondary" style="margin-left:950px; margin-top:10px;"><a href="@Url.Action("cat2list","Categorys")" class="text-white"> Next List </a> </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="single-table">
                        <div class="table-responsive">
                            <table class="table text-center">
                                <thead class="text-uppercase bg-dark">
                                    <tr class="text-white">

                                        <th scope="col">  ID</th>
                                        <th scope="col">Name</th>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <th scope="col">action</th>
                                        }
                                        </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>

                                            <th scope="row">@item.cat1_id</th>
                                            <td>@item.cat1_name </td>
                                            @if (User.IsInRole("Admin"))
                                            {
                                            <td>
                                                <a href="@Url.Action("cat1edit", "Categorys", new { id = item.cat1_id })" class="badge badge-success"> Edit  </a> |
                                                <a href="@Url.Action("cat1delete", "Categorys", new { id = item.cat1_id })" class="badge badge-danger"> Delete  </a>

                                            </td>
                                            }
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- table dark end -->
    </div>
</div>




