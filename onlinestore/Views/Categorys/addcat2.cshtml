@model onlinestore.Models.category2
@{
    ViewBag.Title = "addcat2";
    Layout = "~/Views/shared/backtheme.cshtml";
}



< <div class="card">
    <div class="card-body">
        <h1 class="btn btn-primary col-md-12"> Second Category <br /> Add Here<br /> <i class="fa fa-arrow-circle-down">  </i> </h1>
    </div>
</div>
<div class="col-10 mt-5">
    <div class="card">
        <div class="card-body">

         

            @using (Html.BeginForm("addcat2","Categorys",FormMethod.Post))
            {

                <div class="form-horizontal">



                    <div class="form-group">
                        <a href="@Url.Action("cat2list","Categorys")" class="btn btn-rounded btn-info mb-3 offset-10"> View Categorys </a>
                        <label class="control-label col-md-2"> Select 1st Category </label>
                        <div class="col-md-6">
                            @Html.DropDownList("cat2_fk_cat1", null, "--Select--", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2"> Add 2nd Category </label>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.cat2_name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-2">
                            <button type="submit" class="btn btn-dark btn-lg btn-block"> Add Category </button>

                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>

