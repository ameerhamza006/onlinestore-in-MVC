@model List<onlinestore.Models.product>
@{
    ViewBag.Title = "prodetail";
    Layout = "~/Views/shared/backtheme.cshtml";
}

<div class="card">
    <div class="card-body">
        <a href="@Url.Action("prodetail","Productts")"><h4 class="btn btn-info col-md-12"> Product <br /> View<br /> <i class="fa fa-arrow-circle-down">  </i> </h4></a>
    </div>
</div>
<br />
<h4 class="text-center text-success"> @TempData["deletpro"] </h4>




<div class="main-content-inner">
    <div class="row">
        <!-- table info start -->
        <div class="col-lg-12 mt-5">
            <div class="card">
                <div class="card-body">
                    <table class="table text-center">
                        <tbody class="text-uppercase bg-info">
                            <tr>

                                @using (Html.BeginForm("prodetail", "Productts", FormMethod.Post))
                                {
                                    <td>@if(User.IsInRole("Admin")){ <a href="@Url.Action("addpro","Productts") " class="btn btn-secondary">Add Product</a>}</td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>


                                    <td> <input type="search" name="name" value="@ViewBag.name" class="form-control" placeholder="Search Category" />  </td>
                                    <td> <input type="submit" value="Search" class="btn btn-dark" />  </td>

                                }
                            </tr>

                        </tbody>

                    </table>

                    <div class="single-table">
                        <div class="table-responsive">
                            <table class="table text-center">
                                <thead class="text-uppercase bg-info">
                                    <tr class="text-white">
                                        <th scope="col">ID</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">New Price</th>
                                        <th scope="col">Old Price</th>
                                        <th scope="col">Brand</th>
                                        <th scope="col">Queintity</th>
                                        <th scope="col">Category 1st</th>
                                        <th scope="col">Category 2nd</th>
                                        <th scope="col">Image(1)</th>
                                        <th scope="col">Image(2)</th>
                                        <th scope="col">Image(3)</th>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <th scope="col">Edit_Details_Delete  </th>
                                        }
                                        </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <th scope="row">@item.pro_id</th>
                                        <td>@item.pro_title</td>
                                        <td>@item.pro_price</td>
                                        <td>@item.pro_oldprice</td>
                                        <td>@item.pro_brand</td>
                                        <td>@item.pro_qty</td>
                                        <td>@item.category1.cat1_name</td>
                                        <td>@item.category2.cat2_name</td>

                                        <td>  <a  href="@Url.Action("proimgedit","Productts",new { id = item.pro_id })"}>  <img src="~/productimg/@Url.Content(item.pro_img)" width="150px" height="150px" /> </a> </td>
                                        <td> <a href="@Url.Action("proimg2edit","Productts",new { id = item.pro_id })"> <img src="~/productimg/@Url.Content(item.pro_img2)" width="150px" height="150px" /></a> </td>
                                        <td>  <a href="@Url.Action("proimg3edit","Productts",new { id = item.pro_id })"> <img src="~/productimg/@Url.Content(item.pro_img3)" width="150px" height="150px" /></a> </td>
                                        @if (User.IsInRole("Admin"))
                                        {
                                        <td>
                                            <a href="@Url.Action("proedit", "Productts", new { id = item.pro_id })" class="badge badge-success"> Edit </a> |
                                            <a href="@Url.Action("proview", "Productts", new { id = item.pro_id })" class="badge badge-primary"> Details  </a> |
                                            <a href="@Url.Action("prodelete", "Productts", new { id = item.pro_id })" class="badge badge-danger"> Delete </a>

                                        </td>
                                        }
                                    </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- table info end -->
    </div>
</div>




