@model onlinestore.Models.product
@{
    ViewBag.Title = "addPro";
    Layout = "~/Views/shared/backtheme.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="btn btn-primary col-md-12"> Product <br /> Add Here<br /> <i class="fa fa-arrow-circle-down">  </i> </h4>
    </div>
</div>
<div class="col-12 mt-5">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("addpro", "Productts", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
              

            <div class="form-horizontal">



                <div class="form-group offset-2">
                    <a href="@Url.Action("prodetail","Productts")" class="btn btn-rounded btn-info mb-3 offset-10"> View Product </a>
                    <label class="control-label col-md-2 "> Select 1st Category </label>

                    <div class="col-md-8">
                       
                        @Html.DropDownList("pro_fk_cat1", null, "--Select--", new { @class = "form-control" })
                        
                    </div>
                </div>
                <div class="form-group offset-2">
                    <label class="control-label col-md-2"> Select 2st Category </label>
                    <div class="col-md-8">
                      
                            @Html.DropDownList("pro_fk_cat2", null, "--Select--", new { @class = "form-control" })
                        
                        </div>


                </div>

                <div class="form-group offset-2">
                    <label class="control-label col-md-2"> Product Name </label>
                    <div class="col-md-8">
                        @Html.EditorFor(a => a.pro_title, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="form-group offset-2">
                    <label class="control-label col-md-2"> Price </label>
                    <div class="col-md-8">
                        @Html.EditorFor(a => a.pro_price, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="form-group offset-2">
                    <label class="control-label col-md-2"> Old Price </label>
                    <div class="col-md-8">

                        @Html.EditorFor(a => a.pro_oldprice, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="form-group offset-2">
                    <label class="control-label col-md-2"> Brand </label>
                    <div class="col-md-8">
                        @Html.EditorFor(a => a.pro_brand, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="form-group offset-2">
                    <label class="control-label col-md-2"> Quientity </label>
                    <div class="col-md-8">
                        @Html.EditorFor(a => a.pro_qty, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                </div>

                <div class="form-group offset-2">
                    <label class="control-label col-md-2"> Discription </label>
                    <div class="col-md-8">

                        @Html.TextAreaFor(a => a.pro_discrip, new { htmlAttributes = new { @class = "form-control" } })


                    </div>
                </div>
                <div class="row">

                    <div class="col-lg-2 col-md-4 col-sm-6">

                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6">
                        <div>Image 1st</div>
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6">
                        <div>Image 2nd</div>
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6">
                        <div>Image 3rd</div>
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6">

                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6">

                    </div>

                </div>

                    <div class="row">
                        <div class="col-lg-2 col-md-4 col-sm-6">

                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6">
                            <div><input type="file" name="imgone" class="form-control btn-secondary" /></div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6">
                            <div><input type="file" name="imgtwo" class="form-control btn-secondary" /></div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6">
                            <div class="text-white"><input type="file" name="imgthree" class="form-control btn-secondary text-white" /></div>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6">

                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6">

                        </div>
                    </div>

                    <div class="form-group offset-2">
                        <label class="control-label col-md-2"> </label>
                        <div class="col-md-8">

                           
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="offset-4 col-md-3">
                            <button type="submit" class="btn btn-dark btn-lg btn-block"> Add Product </button>

                        </div>
                    </div>
                </div>

                }


            </div>
    </div>
</div>

