@model onlinestore.Models.product
@{
    ViewBag.Title = "proedit";
    Layout = "~/Views/shared/backtheme.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="btn btn-primary col-md-12"> Product <br /> Edit Here<br /> <i class="fa fa-arrow-circle-down">  </i> </h4>
    </div>
</div>
<div class="col-12 mt-5">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("proedit", "Productts", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {


                <div class="form-horizontal">



                    <div class="form-group offset-2">
                        <a href="@Url.Action("prodetail","Productts")" class="btn btn-rounded btn-info mb-3 offset-10"> View Product </a>
                        <label class="control-label col-md-2 "> 1st Category </label>

                        <div class="col-md-8">
                            @Html.DropDownList("pro_fk_cat1", null, htmlAttributes: new { @class = "form-control" })

                        </div>
                    </div>
                    <div class="form-group offset-2">
                        <label class="control-label col-md-2">  2st Category </label>
                        <div class="col-md-8">
                            @Html.DropDownList("pro_fk_cat2", null, htmlAttributes: new { @class = "form-control" })

                        </div>


                    </div>

                    <div class="form-group offset-2">
                        <label class="control-label col-md-2"> Product Name </label>
                        <div class="col-md-8">
                            @Html.EditorFor(a => a.pro_title, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="form-group offset-2">
                        <label class="control-label col-md-2"> Price </label>
                        <div class="col-md-8">
                            @Html.EditorFor(a => a.pro_price, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="form-group offset-2">
                        <label class="control-label col-md-2"> Old Price </label>
                        <div class="col-md-8">

                            @Html.EditorFor(a => a.pro_oldprice, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="form-group offset-2">
                        <label class="control-label col-md-2"> Brand </label>
                        <div class="col-md-8">
                            @Html.EditorFor(a => a.pro_brand, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="form-group offset-2">
                        <label class="control-label col-md-2"> Quientity </label>
                        <div class="col-md-8">
                            @Html.EditorFor(a => a.pro_qty, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="form-group offset-2">
                        <label class="control-label col-md-2"> Discription </label>
                        <div class="col-md-8">

                            @Html.TextAreaFor(a => a.pro_discrip, new { htmlAttributes = new { @class = "form-control" } })


                        </div>
                    </div>


                    <div class="form-group">
                        <div class="offset-4 col-md-3">
                            <button type="submit" class="btn btn-dark btn-lg btn-block"> Edit Product </button>

                        </div>
                    </div>
                </div>

            }


        </div>
    </div>
</div>



